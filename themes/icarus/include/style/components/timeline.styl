/* ---------------------------------
 *          Archive Timeline
 * --------------------------------- */
$timeline-fg-line ?= $grey-lighter
$timeline-fg-circle ?= $primary
$timeline-bg-line ?= $card-background-color

.timeline-period
    @extend .tag:not(body)
    background: $primary
    color: $primary-invert
    font-size: $size-6

.timeline
    margin-left: 1rem
    padding: 1rem 0 0 1.5rem
    border-left: 1px solid $timeline-fg-line

    .media
        position: relative

        &:before, &:last-child:after
            content: ''
            display: block
            position: absolute
            left: calc(-.375rem - 1.5rem - .25px)

        &:before
            width: .75rem
            height: .75rem
            top: calc(.5rem + 1.5 * .85rem / 2 - .75rem / 2)
            background: $timeline-fg-circle
            border-radius: 50%

        &:first-child:before
            top: calc(2.5 * .85rem / 2 - .75rem / 2)

        &:last-child:after
            width: .75rem
            top: calc(.5rem + 1.5 * .85rem / 2 + .75rem / 2)
            bottom: 0
            background: $timeline-bg-line

        &:first-child:last-child:after
            top: calc(2.5 * .85rem / 2 + .75rem / 2)
