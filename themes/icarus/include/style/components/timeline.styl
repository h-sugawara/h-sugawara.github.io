/* ---------------------------------
 *          Archive Timeline
 * --------------------------------- */
$timeline-fg-line ?= $grey-lighter
$timeline-fg-circle ?= $primary
$timeline-bg-line ?= $card-background-color

.timeline-period
    @extend .tag:not(body)
    background: $primary
    color: $primary-invert
    font-size: $size-6

.timeline
    margin-left: 1rem
    padding: 1rem 0 0 1rem
    border-left: 1px solid $timeline-fg-line

    .media
        position: relative

        &:before, &:last-child:after
            content: ''
            display: block
            position: absolute
            left: calc(-0.375rem - 1rem - 0.5px)

        &:before
            width: 0.75rem
            height: 0.75rem
            top: calc(0.5rem + 0.375rem)
            background: $timeline-fg-circle
            border-radius: 50%

        &:last-child:after
            width: 0.75rem
            top: calc(0.5rem + 0.75rem + 0.375rem)
            bottom: 0
            background: $timeline-bg-line

        &:first-child:last-child:after
            top: calc(2.5 * .85rem / 2 + .75rem / 2)
