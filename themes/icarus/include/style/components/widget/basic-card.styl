@import '../../slim-bulma-stylus/component/menu-basic'
@import '../../slim-bulma-stylus/component/media'
@import '../../slim-bulma-stylus/form-tool/field-grouped'

article.media
    .image
        width: 64px
        height: 64px

        img
            object-fit: cover
            width: 100%
            height: 100%

    .media-content
        color: $text-light

        .date
            @extend .is-size-7, .is-block

        .title
            @extend .is-block, .is-size-6
            margin: 0
            line-height: inherit
            color: $title-color

            &:hover
                color: $primary

        .categories
            @extend .is-size-7, .is-capitalized

.widget
    .menu-list
        .level
            margin-bottom: 0

            .level-left, .level-right, .level-item
                flex-shrink: 1

    .tags
        .tag
            margin-bottom: 0

        .tag:first-child
            background: $primary
            color: $primary-invert
