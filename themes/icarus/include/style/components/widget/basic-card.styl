@import '../../slim-bulma-stylus/component/menu-basic'
@import '../../slim-bulma-stylus/component/menu-list'
@import '../../slim-bulma-stylus/component/media'
@import '../../slim-bulma-stylus/form-tool/field-grouped'

.media
    align-items: center
    padding: 0.5rem 0.25rem

    &:hover
        background-color: $menu-item-hover-background-color
        color: $menu-item-hover-color

    .image
        width: 64px
        height: 64px

        img
            object-fit: cover
            width: 100%
            height: 100%

    .media-content
        display: flex
        flex-flow: column
        color: $text-light
        font-size: $size-7

        .title
            margin: 0
            line-height: inherit
            font-size: $size-6

.widget
    .menu-label
        font-size: 1rem

    .menu-list
        .level
            margin-bottom: 0

    .tags
        .tag
            margin-bottom: 0

        .tag:first-child
            background: $primary
            color: $primary-invert
