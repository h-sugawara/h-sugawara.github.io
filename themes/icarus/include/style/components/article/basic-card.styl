.article
    padding: 1.5rem 0

    .image
        margin-top: -1.5rem
        margin-bottom: 1.5rem

    .article-header, .article-categories
        margin: 0 1.5rem 1.5rem

    .title
        color: inherit
        font-size: $size-2
        line-height: 1.5

    +mobile()
        .title
            font-size: $size-3

    .article-meta, .article-categories, .article-tags
        color: $text-light
        font-size: $size-7

    .article-meta
        overflow-x: auto
        margin-bottom: 0.25rem

    .article-categories
        display: flex
        flex-wrap: wrap
        align-items: flex-start
        justify-content: flex-start
        overflow-x: auto
        column-gap: 0.5rem

        &:before
            content: '@'

        li + li:before
            padding-right: 0.5rem
            content: '/'

    .article-tags
        display: flex
        flex-wrap: wrap
        align-items: center
        justify-content: flex-start
        gap: 0.75rem 0.5rem
        margin: 0 1.5rem

        &::before
            content: '#'

.content
    margin: 0 1.5rem
    word-wrap: break-word
    font-size: $size-5_5
    line-height: 1.75

.image
    &.is-7by3
        padding-top: 42.8%

        img
            bottom: 0
            left: 0
            position: absolute
            right: 0
            top: 0

    .fill
        object-fit: cover
        width: 100% !important
        height: 100% !important
