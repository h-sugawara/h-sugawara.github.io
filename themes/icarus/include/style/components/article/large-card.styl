@import '../../slim-bulma-stylus/element/content-large'
@import '../../slim-bulma-stylus/element/box'
@import 'basic-card'

/* ---------------------------------
 *    Article Summary and Content
 * --------------------------------- */
$link-preview-card-radius ?= 8px
$link-preview-card-border-width ?= 1px
$link-preview-card-contents-radius ?= $link-preview-card-radius - $link-preview-card-border-width

article.article
    .content
        h2
            font-size: $size-3
            position: relative
            margin: 1rem -8px 1rem -32px
            padding: 1rem
            color: #184ea0
            border-radius: 0 100vh 100vh 0
            background: #eef3fc
            -webkit-box-shadow: 3px 3px 5px rgba(0, 0, 0, .2)
            box-shadow: 3px 3px 5px rgba(0, 0, 0, .2)

        h2:before
            position: absolute
            bottom: -10px
            left: 0
            width: 0
            height: 0
            content: ''
            border-top: 10px solid #6c9bfc
            border-left: 10px solid transparent

        h3
            font-size: $size-4
            position: relative
            margin-top: 0.5rem
            margin-left: 0.75rem
            padding: 1rem 0 1rem 1rem
            color: #005748
            background: #e1eed8

        h3:before
            position: absolute
            top: 0
            left: -30px
            content: ''
            border-width: 1.75rem 30px 1.75rem 0
            border-style: solid
            border-color: transparent #e1eed8 transparent transparent

        h3:after
            position: absolute
            top: calc(50% - 5px)
            left: -10px
            width: 10px
            height: 10px
            content: ''
            border-radius: 50%
            background: #005748

        h4
            font-size: $size-5

        h5
            font-size: $size-6

        p
            a
                text-decoration-line: underline

        .link-preview
            display: block
            border-width: $link-preview-card-border-width
            border-style: solid
            border-color: #cbd0d3
            border-radius: $link-preview-card-radius
            margin: 1rem 0 1rem 0
            font-size: $size-normal
            background-color: #f2f3f5

            .og-image
                img
                    border-top-left-radius: $link-preview-card-contents-radius
                    border-top-right-radius: $link-preview-card-contents-radius
                    object-fit: cover
                    object-position: center
                    width: 100% !important
                    height: 100% !important
                    aspect-ratio: 40 / 21

            .descriptions
                padding: 0 1rem 0.5rem 1rem
                border-bottom-left-radius: $link-preview-card-contents-radius
                border-bottom-right-radius: $link-preview-card-contents-radius

                .og-title
                    font-size: $size-4
                    font-weight: 600
                    margin-bottom: 0.25rem

                .og-description
                    color: #525252

// Overflow table
.table-overflow
    overflow-x: auto

    table
        width: auto !important

        th
            word-break: keep-all

// Video container
.video-container
    position: relative
    padding-bottom: 56.25%
    padding-top: 25px
    height: 0

    iframe
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%

.article-licensing
    position: relative
    z-index: 1
    box-shadow: none
    background: $white-ter
    border-radius: $radius
    overflow: hidden

    &:after
        position: absolute
        z-index: -1
        right: -50px
        top: -37.87px
        content: ''
        opacity: .1
        width: 200px
        height: 200px
        background-color: $text
        -webkit-mask: url('/img/creative-commons.svg')
        mask: url('/img/creative-commons.svg')
        -webkit-mask-size: contain
        mask-size: contain

    .level-left
        flex-wrap: wrap
        max-width: 100%

    .licensing-title
        margin-bottom: 1rem
        line-height: 1.2

        p:not(:last-child)
            margin-bottom: 0.25rem

        a
            font-size: $size-7
            color: #525252

    .licensing-meta
        .level-item
            margin-right: 1.5rem

            div
                p
                    font-size: $size-7

        .icons
            .icon
                margin-left: 0.25rem
                width: 1.2em
                height: 1.2em
                font-size: 1.2em
                vertical-align: bottom

        a
            color: inherit
            fill: inherit
