$column-gap ?= 0.75rem

.column
    display: block
    flex-basis: 0
    flex-grow: 1
    flex-shrink: 1
    padding: $column-gap

.columns
    margin-left: ($column-gap * -1)
    margin-right: ($column-gap * -1)
    margin-top: ($column-gap * -1)

    &:last-child
        margin-bottom: ($column-gap * -1)

    // Responsiveness
    +from($tablet)
        &:not(.is-desktop)
            display: flex
