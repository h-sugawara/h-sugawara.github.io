html, body, p, ol, ul, li, figure, h1, h2, h3, h4, h5, h6
    margin: 0
    padding: 0

h1, h2, h3, h4, h5, h6
    font-size: 100%
    font-weight: normal

ul
    list-style: none

html
    box-sizing: border-box

*
    &, &::before, &::after
        box-sizing: inherit

// Media
img, video
    height: auto
    max-width: 100%
